# Enable following symbolic links
Options +FollowSymLinks

# Cache Control Headers for Static Assets
<IfModule mod_expires.c>
  ExpiresActive On
  
  # Images
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/x-icon "access plus 1 year"
  
  # Fonts
  ExpiresByType font/woff "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType font/ttf "access plus 1 year"
  ExpiresByType font/otf "access plus 1 year"
  ExpiresByType application/font-woff "access plus 1 year"
  ExpiresByType application/font-woff2 "access plus 1 year"
  
  # CSS and JavaScript
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType application/javascript "access plus 1 year"
  ExpiresByType text/javascript "access plus 1 year"
  
  # HTML (shorter cache for HTML)
  ExpiresByType text/html "access plus 1 hour"
  
  # JSON and other data
  ExpiresByType application/json "access plus 1 month"
  ExpiresByType application/xml "access plus 1 month"
  ExpiresByType text/xml "access plus 1 month"
</IfModule>

<IfModule mod_headers.c>
  # Cache static assets for 1 year
  <FilesMatch "\.(jpg|jpeg|png|gif|webp|svg|ico|woff|woff2|ttf|otf|eot)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
  
  # Cache CSS and JS for 1 year
  <FilesMatch "\.(css|js)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
  
  # Cache HTML for 1 hour
  <FilesMatch "\.(html|htm)$">
    Header set Cache-Control "public, max-age=3600, must-revalidate"
  </FilesMatch>
  
  # Cache JSON/XML for 1 month
  <FilesMatch "\.(json|xml)$">
    Header set Cache-Control "public, max-age=2592000"
  </FilesMatch>
</IfModule>

# Set index.html as the default directory index
DirectoryIndex index.html index.htm

# Redirect all unknown paths to 404.html
<IfModule mod_rewrite.c>
RewriteEngine On
RewriteBase /

# CRITICAL: Prevent filesystem path exposure
# Never use filesystem paths in rewrite rules - only use URL paths

# Step 1: Handle locale directories - serve index.html internally (no redirect)
# This must come FIRST to catch locale requests before other rules
# Pattern: /pl/, /en/, /de/, etc. (2-5 letter codes)
RewriteCond %{THE_REQUEST} \s/+([a-z]{2,5})/?[\s?] [NC]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^([a-z]{2,5})/?$ /$1/index.html [L]

# Step 2: Block direct access to .txt files - redirect to .html
RewriteCond %{THE_REQUEST} \s/+(.*/)?index\.txt[\s?] [NC]
RewriteRule ^(.*/)?index\.txt$ /$1index.html [R=301,L]

# Step 3: Add trailing slash to directories (for SEO and consistency)
RewriteCond %{REQUEST_FILENAME} -d
RewriteCond %{REQUEST_URI} !/$
RewriteCond %{REQUEST_URI} !^/([a-z]{2,5})/?$ [NC]
RewriteRule ^(.*)$ $1/ [R=301,L]

# Step 4: Handle 404 for non-existent files and directories
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/404\.html$ [NC]
RewriteCond %{REQUEST_URI} !^/404/$ [NC]
RewriteCond %{REQUEST_URI} !\.(css|js|jpg|jpeg|png|gif|ico|svg|woff|woff2|ttf|eot)$ [NC]
RewriteCond %{REQUEST_URI} !^/_next/ [NC]
RewriteRule ^(.*)$ /404.html [L,R=404]
</IfModule>

# Cache Next.js static files
<IfModule mod_headers.c>
  <FilesMatch "^/_next/static/">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
</IfModule>

